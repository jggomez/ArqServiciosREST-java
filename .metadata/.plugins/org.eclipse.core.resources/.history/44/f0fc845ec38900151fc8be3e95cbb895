			usuario.setNombres("Carlos");
			usuario.setApellidos("Perez");
			usuario.setCelular("317555555");
			usuario.setDireccion("Cr 89 #45");
			usuario.setFechaNacimiento("21/08/2011");
			usuario.setId(3);

			lstUsuarios.add(usuario);
		}
		
		
		return lstUsuarios;
	}

